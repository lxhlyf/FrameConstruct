<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_phrase_item_cv"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="5dp"
    android:padding="5dp"
    app:cardCornerRadius="20dp"
    tools:ignore="MissingDefaultResource">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_header_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--android:tag="background|accent_color"-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/left_menu_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/left_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简言"
            android:layout_toRightOf="@+id/left_menu_icon"
            android:layout_toEndOf="@+id/left_menu_icon"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/left_menu_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_menu_name"
            android:layout_toRightOf="@+id/left_menu_icon"
            android:layout_marginLeft="24dp"
            android:layout_toEndOf="@+id/left_menu_icon"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:text="If you can , why not?"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>